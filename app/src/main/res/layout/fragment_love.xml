<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swl_wei_xin_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />
    </android.support.v4.widget.SwipeRefreshLayout>


    <com.trip.happy.view.fab.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp">

        <com.trip.happy.view.fab.FloatingActionButton
            android:id="@+id/floataction_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#3FC2E3"
            fab:fab_colorPressed="#3FC2E3"
            fab:fab_icon="@drawable/floataction_list" />


        <com.trip.happy.view.fab.FloatingActionButton
            android:id="@+id/floataction_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#3FC2E3"
            fab:fab_colorPressed="#3FC2E3"
            fab:fab_icon="@drawable/floataction_grid" />


    </com.trip.happy.view.fab.FloatingActionsMenu>
</RelativeLayout>

